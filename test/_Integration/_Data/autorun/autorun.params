<?php

global $argv;
global $argc;

if (!defined('STDIN') || $argc < 3)
{
    echo("Tried to execute program outside of CLI mode or not enough parameters have been passed.\n");
    exit(1);
}

$controller = null;
$parent = (string) $argv[1];
$alias  = (string) $argv[2];
$name   = (string) $argv[3];
$args   = [];

for ($i=4; ; $i++)
{
    if (!isset($argv[$i]))
    {
        break;
    }

    $arg = explode('=', ltrim($argv[$i], '-'));
    $args[$arg[0]] = $arg[1];
}
